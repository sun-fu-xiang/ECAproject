<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.kgc.mapper.BrandMapper">
	<select id="listBrands" resultType="brand">
		select id,name,describe from brand
		<where>
			<if test="name != null and name != ''">
				and name like CONCAT('%',#{name},'%')
			</if>
		</where>
		order by sort 
	</select>
	<select id="getBrandById" resultType="brand">
	select * from brand where id = #{id}
	</select>
	<update id="updateBrand" parameterType="brand">
		update brand 
		<set>
			<if test="name != null and name != ''">
				name = #{name},
			</if>
			<if test="describe != null and describe != ''">
				`describe` = #{describe},
			</if>
			<if test="sort != null">
				sort = #{sort}
			</if>
		</set>
		 where id = #{id}
	</update>
	<insert id="saveBrand" parameterType="brand">
		insert into brand(name,`describe`,sort) values(#{name},#{describe},#{sort})
	</insert>
	<delete id="deleteBrandById" parameterType="int">
		delete from brand where id = #{id}
	</delete>
</mapper>